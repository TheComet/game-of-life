# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := Game Tests

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

Game: 
	@echo "==== Building Game ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Game.make

Tests: 
	@echo "==== Building Tests ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tests.make

clean:
	@${MAKE} --no-print-directory -C . -f Game.make clean
	@${MAKE} --no-print-directory -C . -f Tests.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Game"
	@echo "   Tests"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
